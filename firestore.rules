rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Clients collection - users can only access their own clients
    match /clients/{clientId} {
      // Allow read if authenticated and userId matches
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
                     
      // Allow create if authenticated and setting userId to current user
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
                       
      // Allow update/delete if authenticated and userId matches
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Transactions collection - users can only access their own transactions
    match /transactions/{transactionId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Metadata collection for counters (STT, Invoice, Voyage numbers)
    match /metadata/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Voyages collection - users can only access their own voyages
    match /voyages/{voyageId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Expenses collection - users can only access their own expenses
    match /expenses/{expenseId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Invoices collection - users can only access their own invoices
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }

    // Fleets collection - users can only access their own fleets
    match /fleets/{fleetId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }

    // Maintenance Logs collection - users can only access their own logs
    match /maintenance_logs/{logId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }

    // Settings collection - users can only access their own settings document (ID = userId)
    match /settings/{settingId} {
      allow read, write: if request.auth != null && settingId == request.auth.uid;
    }
  }
}
